<Page x:Class="ncx.forget"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ncx"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="forget">

    <Grid Background="Bisque">
        <Label Content="FORGET PASSWORD" FontSize="25" FontWeight="Bold" Margin="255,75,290,330"></Label>
        <TextBox Height="35" Width="450" Margin="155,150,195,265" Name="pass"></TextBox>

        <TextBox Height="35" Width="450" Margin="155,205,195,210" Name="user"></TextBox>
        <Button Content="submit" FontSize="25" Height="45" Width="100" Margin="310,255,390,150" Click="Button_Click"></Button>
        <ComboBox Height="40" Width="120" Margin="65,80,615,330" Name="combo">
            <ComboBoxItem>
                Admin
            </ComboBoxItem>
            <ComboBoxItem >
                User
            </ComboBoxItem>
        </ComboBox>
    </Grid>
</Page>
