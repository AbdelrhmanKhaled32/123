<Page x:Class="ncx.sign_up"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ncx"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="sign_up">

    <Grid Background="Black" Margin="0,0,0,-80">
        <Grid>
            <Label Content="username :" FontSize="30" FontWeight="Bold" Background="Black" Margin="50,70,575,405" Foreground="White"/>
            <Label Content="password :" FontSize="30" FontWeight="Bold" Background="Black" Margin="105,131,580,340" Foreground="White"/>
            <TextBox x:Name="username" Margin="245,70,190,420"/>
            <TextBox x:Name="password" Margin="245,135,190,355"/>
            <Button Content="Sign up" FontSize="15" FontWeight="Bold" Margin="360,220,330,270" RenderTransformOrigin="0.5,0.5" Click="Button_Click"/>
            <ComboBox Name="combo" Width="100" Height="40" Margin="130,220,570,270" SelectionChanged="combo_SelectionChanged">
                <ComboBoxItem>User</ComboBoxItem>
                <ComboBoxItem>Admin</ComboBoxItem>
            </ComboBox>
        </Grid>
    </Grid>
</Page>
